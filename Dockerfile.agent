# Dockerfile for Agent App
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    libc6-dev \
    libsqlite3-dev \
    sqlite3 \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements
COPY requirements_agent.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements_agent.txt

# Copy application code
COPY agent_app/ ./agent_app/
COPY setup_supabase.md .

# Copy start script
COPY start_railway.sh .
RUN chmod +x start_railway.sh

# Expose port
EXPOSE 8080

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PORT=8080

# Run the application
# Railway will override this with startCommand from railway.toml
# Default CMD uses the start script
CMD ["./start_railway.sh"]


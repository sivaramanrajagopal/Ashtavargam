# Dockerfile for Agent App
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    libc6-dev \
    libsqlite3-dev \
    sqlite3 \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements
COPY requirements_agent.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements_agent.txt

# Copy application code
COPY agent_app/ ./agent_app/
COPY setup_supabase.md .

# Expose port
EXPOSE 8080

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PORT=8080

# Run the application
CMD ["uvicorn", "agent_app.main:app", "--host", "0.0.0.0", "--port", "8080"]

